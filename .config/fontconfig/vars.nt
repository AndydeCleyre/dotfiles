options:
  autohint: false
  hinting: false
  hintstyle: hintnone
  lcdfilter: lcddefault
  rgba: rgb
features:
  - FRAC
  - THND
  - TXTR
roles:
  emoji:
    - Symbols Nerd Font
    - NanumGothicCoding
    - OpenMoji
    - JoyPixels
    - Untitled1
  monospace:
    - Iosevka Term Custom
    - 0xProto
    - Sudo
    - Fantasque Sans Mono
    - Ubuntu Mono
    - Nimbus Mono PS
    # The rest have noticeably worse character coverage:
    - Maple Mono
  sans-serif:
    - Iosevka QP Custom
    - Sudo UI
    - Ubuntu
    - Baloo 2 Medium
    - Barlow Medium
    # The rest have noticeably worse character coverage:
    - Convergence
    - Atkinson Hyperlegible
    - PT Sans
  serif:
    # test words: DEPENDENCIES bikes
    - Typey McTypeface
    - Kelvinch
    - Alegreya
    - Andada Pro
    - Fraunces
    - Quando
    # - Caladea
    - Newsreader 16pt
    - YoungSerif
    - Libre Baskerville
    # Great in small amounts, tiresome for extended content:
    - Milonga
    # The rest have noticeably worse character coverage:
    - Namdhinggo
    - Annapurna SIL
    - Alice
    - Brawler
    - Averia Serif
