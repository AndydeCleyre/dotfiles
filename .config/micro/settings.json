{
    "*.html": {
        "tabsize": 2
    },
    "*.pug": {
        "tabsize": 2
    },
    "*.yml": {
        "tabsize": 2
    },
    "autoclose": true,
    "autoindent": true,
    "autosave": false,
    "colorcolumn": 100,
    "colorscheme": "gruvbox-tc",
    "cursorline": true,
    "eofnewline": true,
    "fastdirty": true,
    "fileformat": "unix",
    "ftoptions": true,
    "ignorecase": true,
    "indentchar": " ",
    "infobar": true,
    "keepautoindent": false,
    "linter": true,
    "mouse": true,
    "pluginchannels": [
        "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    ],
    "pluginrepos": [],
    "rmtrailingws": true,
    "ruler": true,
    "savecursor": true,
    "saveundo": false,
    "scrollmargin": 3,
    "scrollspeed": 2,
    "softwrap": true,
    "splitBottom": true,
    "splitRight": true,
    "statusline": true,
    "syntax": true,
    "tabmovement": false,
    "tabsize": 4,
    "tabstospaces": true,
    "termtitle": true,
    "useprimary": true
}
