scheme:
  bases:
    - One Dark (Gogh)
    - kanagawabones
    - Popping and Locking
    - Doom Peacock
    - Red Planet
  overrides:
    background: #16161d
    ansi[8]: #dea050
    brights[8]: #ffa52f
    cursor_bg: #ff8bf0
  opacity: 1.0
  fps: 30
  cursor: SteadyBar
fonts:
  size: 24
  families:
    # italic: 0xProto
    main:
      - Iosevka Term Custom
      - Iosevka Term Custom SmEx
      - Iosevka Term Custom Extended
      - 0xProto
      # - Sudo
      # Sudo shadows some Nerd Font symbols
      - Fantasque Sans Mono
      - Ubuntu Mono
      # - LXGW WenKai Mono TC
      # LXGW problematic? with ellipses or bubbles?
      - Maple Mono
      - Share Tech Mono
      - Symbols Nerd Font Mono
      - Symbols Nerd Font
      - NanumGothicCoding
      - Twemoji
      - SerenityOS Emoji
      - OpenMoji Color
      - JoyPixels
  features:
    - clig
    - frac
    - kern
    - liga
    - thnd
    - txtr
keys:
  -
    action: IncreaseFontSize
    mods: CTRL
    key: =
  -
    action: DecreaseFontSize
    mods: CTRL
    key: -
  -
    action: ResetFontSize
    mods: CTRL
    key: 0
  -
    action: PasteFrom "Clipboard"
    mods: SHIFT|CTRL
    key: v
misc:
  canonicalize_pasted_newlines: LineFeed
  check_for_updates: false
  custom_block_glyphs: false
  disable_default_key_bindings: true
  enable_tab_bar: false
