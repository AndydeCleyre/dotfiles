langs:
  factor:
    extensions:
      - factor-rc
  ini:
    shebang: ^\[.*\]$
    extensions:
      - in
    names:
      - dev-requirements.txt
      - doc-requirements.txt
      - local-requirements.txt
      - ops-requirements.txt
      - requirements.txt
      - test-requirements.txt
  json:
    shebang: ^\{$
    extensions:
      - sublime-settings
  makefile:
    names:
      - Makefile
  python:
    extensions:
      - enaml
      - ipy
      - pyj
  qml:
    extensions:
      - slint
  shellscript:
    shebang: ^#!/bin/execlineb($| .*)
    extensions:
      - install
      - pkgbuild
      - zsh-theme
      - zshenv
      - zshrc
    names:
      - PKGBUILD
      - activate
  sql:
    extensions:
      - prql
  toml:
    extensions:
      - toml.wz
    names:
      - Pipfile
      - Cargo.lock
  xml:
    shebang: ^<\?xml .*>$
    extensions:
      - ui
  yaml:
    extensions:
      - yml.wz
      - hjson
