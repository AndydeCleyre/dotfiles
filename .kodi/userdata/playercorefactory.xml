<playercorefactory>
  <players>
    <player name="mpv" type="ExternalPlayer" audio="false" video="true">
      <filename>/usr/bin/mpv</filename>
      <args>"{1}"</args>
      <hidexbmc>true</hidexbmc>
    </player>
  </players>
  <rules action="prepend">
    <rule video="true" player="mpv"/>
  </rules>
</playercorefactory>
